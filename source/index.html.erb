      typeSpeed: 100,
      startDelay: 800,
      backDelay: 2000,
      loop: true
    });

    // SCROLL LOGO
    logoScroll()

    // MATTER.JS
    // launchNewtonsCradle()
    launchSlingshot();

    // MAP
    createMap();

    // SLICK
    $('.videos-slick').slick({
