<script>
  $( document ).ready(function() {
    // MATTER.JS
    launchSlingshot();

    // SKILLS
    var notFired = true;
    $(window).scroll(function() {
      var scrollReached = ($(window).scrollTop() >= ($("#launch-skills-target").position().top) - 200);
      if  (scrollReached && notFired) {
        <% data.skills.each_with_index do |skill, index| %>
          var id = "#skill-<%= index %>";
            $(id + " > svg").remove();
            launchSkills(id, <%= skill['level'].to_f %>, "<%= skill['start_color'] %>", "<%= skill['end_color'] %>");
        <% end %>
        notFired = false;
      }
    });


    // MAP
    createMap();
  });
</script>
